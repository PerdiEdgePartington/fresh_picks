          <% end %>
        </div>
          <div class="grid">
            <%= button_to "view all produce", produce_index_path, {:class => "home-btn", :method => :get} %>
          </div>
      </div>
    </div>
  </div>
</div>
<%# <script src="months_grid_controller.js"></script> %>
<%#= javascript_include_tag "../javascript/controllers/months_grid_controller", "data-turbo-track": "reload", defer: true %>
<script>
const months = document.querySelectorAll('.clickable');

  const toggleActiveClass = (event) => {
    event.currentTarget.classList.toggle('active');
  };

  const toggleActiveOnClick = (month) => {
    month.addEventListener('click', toggleActiveClass);
  };

  months.forEach(toggleActiveOnClick);

</script>
