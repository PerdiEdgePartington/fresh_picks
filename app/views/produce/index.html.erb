<div>
  <h1 class="produce-h1">Your choice of seasonal produce</h1>
</div>


<%= form_with url: produce_index_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a produce"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


  <div class="main-container">
    <div class="index-cards">
    <%  @produce.each do |produce| %>
        <div class="index-card">
          <h1> <%= produce.name %></h1>
          <% if produce.photo.attached? %>
          <%= cl_image_tag produce.photo.key %>
          <% end %>
            <div class="descriptions">
              <h1> <%= produce.name %></h1>
                 <p>
                    <%= produce.description %>
                 </p>
                  <%= button_to "More about me!", produce_path(produce), {:class => "card-btn", :method => :get} %>
                    <%# <button type="button" class="btn btn-success" >More about me!</button> %>
            </div>
        </div>
    <% end %>
    </div>
  </div>
